{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "linebreak-style": ["error", "unix"],
      "indent": ["error", 2],
      "no-undef": [0],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": ["error"]
    }
}
